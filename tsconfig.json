{
  "compilerOptions": {
    "target": "ESNext",
    "declaration": true,
    "lib": ["ESNext", "DOM"],
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "importHelpers": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.e2e-spec.ts"
  ]
}
